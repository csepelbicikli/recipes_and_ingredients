{{#each messages_info}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

{{#each messages_error}}
<div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Felvitt receptek</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Név</th>
            <th>Státusz</th>
            <th>Felhasználó</th>
            <th>Létrehozva</th>
            <th>Műveletek</th>
        </tr>   
    </thead>
    <tbody>
        {{#each recipes}}
        <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{nickname}}</td>
            <td>{{date}}</td>
            <td>(<a class="recipe-describe" href="/recipes/describe/{{id}}">Megtekintés</a>) 
            (<a class="recipe-modify" href="/recipes/modify/{{id}}">Módosítás</a>) 
            (<a class="recipe-delete" href="/recipes/delete/{{id}}">Törlés</a>)</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/recipes/new" class="btn btn-default">Új recept felvitele</a></p>