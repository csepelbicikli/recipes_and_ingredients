<div class="page-header">
    <h1>Meglévő hozzávaló módosítása</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.tartalom}}
                has-error
            {{/if}}
        ">
            <label for="tartalom" class="col-lg-2 control-label">Tartalom</label>
            <div class="col-lg-10">
                <input class="form-control" id="tartalom" name="tartalom" type="text" value="{{data.tartalom}}">
                {{#if validationErrors.tartalom}}
                    <span class="help-block">{{validationErrors.tartalom.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <a href="/recipes/describe/{{data.recept}}">Vissza</a>
                <button type="reset" class="btn btn-default">Alaphelyzet</button>
                <button type="submit" class="btn btn-primary">Módosít</button>
            </div>
        </div>
    </fieldset>
</form>        